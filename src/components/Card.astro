---
import { Icon } from "astro-icon";

interface Props {
	time: string;
	starred: number;
	title: string;
	author: string;
	price?: number | string;
	banner: string;
	author_photo: string;
}

const {
	starred = 3,
	time = "1h 30m",
	title = "Short film",
	author = "John Doe",
	price = "View",
	banner = "/intro.jpg",
	author_photo = "/director-1.jpg",
} = Astro.props;
---

<article class="relative rounded-xl pb-3 bg-[#222] p-2 max-h-[240px]">
	<Icon
		name="mdi:bookmark"
		width="30px"
		class="bg-white rounded-full p-1 absolute right-3 top-3 hover:scale-110 transition-transform cursor-pointer hover:opacity-80"
	/>

	<img
		src={banner}
		alt="A camera taking a photo."
		class="rounded-md h-3/5 w-full object-cover"
	/>
	<span
		class="bg-[#23262d] rounded-3xl text-white flex min-w-2/6 max-w-fit pr-4 gap-2 items-center relative bottom-2"
		><img
			src={author_photo}
			width="50px"
			class="object-cover w-8 h-8 rounded-full"
		/>{author}</span
	>

	<div>
		<h3 class="text-white text-lg">{title}</h3>
		<div class="flex justify-between px-2 pl-0">
			<div class="flex items-center gap-2">
				<Icon name="mdi:clock-time-twelve" width="20" color="white" />
				<span class="text-white/70 text-xs">{time}</span>
			</div>

			<div class="flex items-center gap-2">
				<Icon name="mdi:star" width="15" color="white" />
				<span class="text-white/70 text-xs">{starred}/5</span>
			</div>

			<a
				href="/ID"
				class="bg-carmesi rounded-2xl px-4 py-1 text-white ml-4 hover:scale-95 hover:opacity-90"
				>{price}</a
			>
		</div>
	</div>
</article>
