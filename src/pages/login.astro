---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Sign in to Maker now!">
    <main
        class="bg-stone-900 w-2/4 rounded-lg py-4 px-3 flex flex-col items-center max-w-sm min-h-max pb-8"
    >
        <ul class="grid grid-cols-4 w-full gap-3 my-2">
            <li class="h-1 rounded-lg bg-white/20 w-full block"></li>
            <li class="h-1 rounded-lg bg-white/20 w-full block"></li>
            <li class="h-1 rounded-lg bg-white/20 w-full block"></li>
            <li class="h-1 rounded-lg bg-white/20 w-full block"></li>
        </ul>

        <span
            class="text-xs opacity-60 text-right w-full mr-4 p-0 m-0 cursor-pointer hover:opacity-100 transition-all text-white"
            >Skip</span
        >

        <h1 class="text-3xl font-bold text-center w-full text-white">
            Complete your
        </h1>

        <form action="" class="flex flex-col items-center w-full">
            <div class="flex flex-col">
                <label
                    for="image-file"
                    class="w-28 h-28 rounded-full bg-black mt-4 grid place-items-center relative"
                >
                    <img src="/User.png" class="absolute" />
                    <img
                        src="/plus.png"
                        width="32px"
                        class="relative top-8 left-10"
                    />
                </label>
                <input
                    type="file"
                    name="image-file"
                    id="image-file"
                    class="hidden"
                    accept="image/*"
                />
            </div>

            <div class="flex flex-col text-white w-3/4">
                <label for="fullname" class="text-xs mt-2 ml-2">Full name</label
                >
                <input
                    type="text"
                    id="fullname"
                    placeholder="Enter your full name"
                    class="bg-stone-800 rounded-2xl py-1 px-3 outline-none text-sm placeholder:text-sm"
                />
            </div>

            <div class="flex flex-col text-white w-3/4">
                <label for="username" class="text-xs mt-2 ml-2">Username</label>
                <input
                    type="text"
                    id="username"
                    placeholder="Create your username"
                    class="bg-stone-800 rounded-2xl py-1 px-3 outline-none text-sm"
                />
            </div>

            <div class="flex flex-col text-white w-3/4">
                <label for="location" class="text-xs mt-2 ml-2">Location</label>
                <input
                    type="text"
                    id="location"
                    placeholder="Choose your location"
                    class="bg-stone-800 rounded-2xl py-1 px-3 outline-none text-sm"
                />
            </div>

            <div class="flex gap-2 mt-4 w-3/4">
                <button
                    type="button"
                    class="bg-white text-black rounded-2xl text-xs w-full px-2 py-2 block font-bold"
                    >Back
                </button>
                <button
                    type="button"
                    class="bg-carmesi text-white rounded-2xl text-xs w-full px-2 block font-bold"
                    >Next
                </button>
            </div>

            <style>
                * {
                    font-family: Poppins;
                }
                body {
                    display: grid;
                    place-items: center;
                    background-image: url("/moon_bg.jpg");
                    background-attachment: fixed;
                    background-position: center;
                    background-repeat: no-repeat;
                    background-size: cover;
                    backdrop-filter: blur(20px);
                    height: 100vh;
                }
            </style>
        </form>
    </main>
</Layout>
