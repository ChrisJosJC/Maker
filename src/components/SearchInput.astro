---
interface Props {
    value: string;
}
const { value } = Astro.props;
---

<form class="sticky top-4 z-50" action="/search" method="get">
    <div class="flex mb-2">
        <div class="relative w-full">
            <input
                name="search"
                type="search"
                value={value}
                id="search-dropdown"
                class="block p-2.5 w-full z-20 text-sm outline-none text-gray-900 bg-gray-50 rounded-r-lg border-l-gray-50 border-l-2 border border-gray-300 focus:ring-carmesi focus:border-carmesi dark:bg-gray-700 dark:border-l-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-carmesi rounded-l-lg"
                placeholder="Searching makers..."
            />
            <button
                type="submit"
                class="absolute top-0 right-0 p-2.5 text-sm font-medium h-full text-white bg-carmesi rounded-r-lg border border-carmesi hover:bg-carmesi focus:ring-4 focus:outline-none focus:ring-carmesi/30 dark:bg-carmesi dark:hover:bg-carmesi dark:focus:ring-carmesi"
            >
                <svg
                    class="w-4 h-4"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 20 20"
                >
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"></path>
                </svg>
                <span class="sr-only">Search</span>
            </button>
        </div>
    </div>
</form>

<script>
    const $ = (el) => document.querySelector(el);

    $("#dropdown-button").addEventListener("blur", () => {
        $("#dropdown").classList.add("hidden");
    });
    $("#dropdown-button").addEventListener("click", () => {
        $("#dropdown").classList.toggle("hidden");
    });
</script>
