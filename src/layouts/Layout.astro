---
import "@fontsource/poppins";
import "@fontsource-variable/overpass";
import SpeedInsights from "@vercel/speed-insights/astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
const description =
  "Makerly is a platform for photographers and small directors to easily communicate with their audience. Support your favorite creators through premium memberships or VIP donations. Join Makerly today!";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Makerly, photography, videography, creators, platform, premium memberships, VIP donations"
    />
    <meta name="author" content="Makerly Inc." />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://makerly.art/favicon.webp" />
    <meta name="twitter:image" content="https://makerly.art/favicon.webp" />
    <meta property="og:url" content="makerly.art" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <link rel="canonical" href="https://makerly.art/" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="google-adsense-account" content="ca-pub-6896233735744206" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
  <SpeedInsights />
</html>
<style is:global>
  html {
    font-family: Poppins, system-ui, sans-serif;
    background: #13151a;
    color: white;
    background-size: 224px;
    scroll-behavior: smooth;
  }
  h1,
  h2,
  h3,
  h4 {
    font-family: "Overpass Variable", system-ui, sans-serif;
  }
</style>
