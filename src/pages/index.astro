---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Makerly - Click the talent">
  <header
    class="p-4 rounded-md border-white/70 bg-white/10 mx-6 my-7 flex flex-col-reverse relative max-h-screen box-border"
  >
    <div class="relative -top-32 h-0 pb-24 z-10">
      <h1
        class="text-8xl md:text-9xl font-extrabold bg-clip-text text-transparent bg-[linear-gradient(to_right,theme(colors.maker),theme(colors.white),theme(colors.maker),theme(colors.fuchsia.400),theme(colors.orange.700),theme(colors.indigo.800),theme(colors.maker))] bg-[length:200%_auto] animate-gradient"
      >
        Makerly
      </h1>
      <p class="text-white/90 text-pretty w-4/5">
        Makerly is the platform for photographers and small directors to easily
        communicate with their audience.
      </p>
      <a
        href="/signup"
        class="block bg-maker font-semibold py-3 w-4/5 pl-3 rounded-md mt-2 hover:bg-opacity-90 transition-all outline-2 outline-white outline"
        >Join now!</a
      >
    </div>
    <div>
      <img
        src="/camera.png"
        class="aspect-square h-[50%] object-cover animate-pulse -z-10"
      />
    </div>
  </header>
</Layout>
