---
import BetaSpot from "../components/BetaSpot.astro";
import Footer from "../components/Footer.astro";
import Hero from "../sections/Hero.astro";
import Projects from "../sections/Projects.astro";
import Layout from "../layouts/Layout.astro";
import BackgroundBlurry from "../components/BackgroundBlurry.astro";

if (Astro.cookies.has("logged")) return Astro.redirect("/dashboard", 303);
const status = Astro.url.searchParams.get("code");
---

<Layout title="Makerly - Click the talent">
  <BackgroundBlurry />
  <Hero />
  <Projects />
  <section class="bg-maker/5 backdrop:blur-sm mt-14">
    <div class="max-w-screen-xl px-4 py-8 mx-auto text-center lg:py-16 lg:px-6">
      <figure class="max-w-screen-md mx-auto">
        <svg
          class="h-12 mx-auto mb-3 text-gray-400 dark:text-gray-600"
          viewBox="0 0 24 27"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M14.017 18L14.017 10.609C14.017 4.905 17.748 1.039 23 0L23.995 2.151C21.563 3.068 20 5.789 20 8H24V18H14.017ZM0 18V10.609C0 4.905 3.748 1.038 9 0L9.996 2.151C7.563 3.068 6 5.789 6 8H9.983L9.983 18L0 18Z"
            fill="currentColor"></path>
        </svg>
        <blockquote>
          <p class="text-2xl font-medium text-gray-900 dark:text-white">
            "Makerly transformed my online creativity. It's intuitive,
            user-friendly, and connects me with a vibrant community. Grateful
            for this platform"
          </p>
        </blockquote>
        <figcaption class="flex items-center justify-center mt-6 space-x-3">
          <div
            class="flex items-center divide-x-2 divide-gray-500 dark:divide-gray-700"
          >
            <div class="pr-3 font-medium text-gray-900 dark:text-white">
              Anonymous client
            </div>
            <div
              class="pl-3 text-sm font-light text-gray-500 dark:text-gray-400"
            >
              S.P.M.
            </div>
          </div>
        </figcaption>
      </figure>
    </div>
  </section>
  <section class="bg-white">
    <div class="py-8 lg:py-16 mx-auto max-w-screen-xl px-4 mb-0 pb-2 mt-6">
      <h2
        class="mb-8 lg:mb-16 text-3xl font-extrabold tracking-tight leading-tight text-center text-gray-900 md:text-4xl"
      >
        Our sponsors
      </h2>
      <div
        class="grid grid-cols-2 gap-8 text-gray-500 sm:gap-12 md:grid-cols-3 lg:grid-cols-6 dark:text-gray-400"
      >
        <img
          src="/Sponsor-One.png"
          class="h-32 object-cover object-center"
          alt="Fran De Connection Sponsor"
        />
      </div>
    </div>
  </section>
  <Footer />
  <BetaSpot />
</Layout>
